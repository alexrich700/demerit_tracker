<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add A New Employee</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/employee" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="employee[name]" placeholder="Add A New Employee">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="employee[tallymark]" placeholder="Initial Tally Marks">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="employee[strike]" placeholder="Initial Strikes">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/employee">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>